<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KobberLan.ViewModels"
        x:Class="KobberLan.Views.InterfaceWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="420" Height="240"
        Title="Network Interface"
        CanResize="False"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="10" Spacing="8">
        <TextBlock Text="Network interface:" />

        <ComboBox ItemsSource="{Binding Adapters}"
                  SelectedItem="{Binding SelectedAdapter}"
                  Width="320" />

        <Button Content="Refresh"
                Command="{Binding RefreshAdaptersCommand}"
                Width="120"/>
    </StackPanel>

</Window>